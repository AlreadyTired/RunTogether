<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upperactivity.MyAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="my account activity"
            />
        <Button
            android:id="@+id/PasswordChangeButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Password Change"/>
        <Button
            android:id="@+id/IDCancellationInputButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ID Cancellation Button"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>